<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="@string/pref_about_list_key"
        android:title="@string/pref_about_list_title"
        android:entries="@array/pref_about_list_titles"
        android:entryValues="@array/pref_about_list_values"
        android:defaultValue="5"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <Preference
        android:key="@string/pref_about_version_key"
        android:title="@string/pref_about_version_title"
        android:summary="@string/pref_about_version_summary">
    </Preference>

    <Preference
        android:key="@string/pref_about_github_key"
        android:title="@string/pref_about_github_title"
        android:summary="@string/pref_about_github_summary">
    </Preference>

</PreferenceScreen>
